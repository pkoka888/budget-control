# Budget Control - Environment Configuration Example
# Copy this file to .env and update with your settings

# Application Settings
APP_NAME="Budget Control"
APP_ENV=production
APP_DEBUG=false
APP_TIMEZONE=Europe/Prague
APP_CURRENCY=CZK

# Database Settings
DB_TYPE=sqlite
DB_PATH=/var/www/html/database/budget.db

# File Upload Settings
UPLOAD_MAX_SIZE=10485760
UPLOAD_DIR=/var/www/html/uploads/csv
BANK_JSON_DIR=/var/www/html/user-data/bank-json

# API Settings (for external integrations)
API_TIMEOUT=30
API_MAX_RETRIES=3

# Security Settings
SESSION_LIFETIME=3600
SESSION_SECURE=true
SESSION_HTTPONLY=true

# Email Settings (for notifications - optional)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@budgetcontrol.local
MAIL_FROM_NAME="Budget Control"

# Performance Settings
OPCACHE_ENABLE=1
OPCACHE_MEMORY=128
PHP_MEMORY_LIMIT=128M
PHP_MAX_EXECUTION_TIME=30

# Logging
LOG_LEVEL=error
LOG_PATH=/var/www/html/logs/app.log

# External APIs (optional)
# OPENAI_API_KEY=
# JOB_API_KEY=
# LEARNING_API_KEY=

# Feature Flags
FEATURE_2FA_ENABLED=true
FEATURE_EMAIL_VERIFICATION=true
FEATURE_AI_INSIGHTS=false
FEATURE_JOB_OPPORTUNITIES=true
FEATURE_SCENARIO_PLANNING=true
FEATURE_FAMILY_SHARING=true

# Family Sharing Configuration
# Invitation expiry time (in days)
INVITATION_EXPIRY_DAYS=7

# Notification polling interval (in seconds)
NOTIFICATION_POLL_INTERVAL=60

# Child account default settings (in CZK)
CHILD_APPROVAL_THRESHOLD=100
CHILD_DAILY_LIMIT=500
CHILD_WEEKLY_LIMIT=2000
CHILD_MONTHLY_LIMIT=5000

# Allowance automation
ALLOWANCE_AUTOMATION_ENABLED=true
ALLOWANCE_CRON_SCHEDULE="0 9 * * *"

# Activity log retention (in days)
ACTIVITY_LOG_RETENTION=90

# Chore system
CHORE_PHOTO_MAX_SIZE=5242880
CHORE_PHOTO_DIR=/var/www/html/uploads/chores
