# Budget Control Environment Configuration
# Copy this file to .env and fill in your actual values

# Application
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-domain.com

# Database
DB_PATH=../data/budget.db

# Currency Exchange APIs
ALPHA_VANTAGE_API_KEY=
FIXER_API_KEY=
CURRENCY_API_KEY=

# Investment APIs
COINMARKETCAP_API_KEY=

# OCR Services
GOOGLE_CLOUD_VISION_API_KEY=
AWS_TEXTRACT_ACCESS_KEY=
AWS_TEXTRACT_SECRET_KEY=
AZURE_VISION_API_KEY=
AZURE_VISION_ENDPOINT=

# AI Services (Optional - for enhanced insights)
OPENAI_API_KEY=

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_NAME=Budget Control
SMTP_FROM_EMAIL=noreply@your-domain.com

# Alternative Email Providers
# SendGrid
SENDGRID_API_KEY=

# Mailgun
MAILGUN_API_KEY=
MAILGUN_DOMAIN=

# AWS SES
AWS_SES_KEY=
AWS_SES_SECRET=
AWS_SES_REGION=us-east-1

# Backup Configuration
BACKUP_ENCRYPTION_KEY=your_secure_random_key_here
AWS_S3_BUCKET=your-backup-bucket
AWS_S3_REGION=us-east-1
AWS_S3_KEY=
AWS_S3_SECRET=

# Security
SESSION_LIFETIME=7200
PASSWORD_MIN_LENGTH=8
API_RATE_LIMIT=1000

# Features
ENABLE_MULTI_CURRENCY=true
ENABLE_EXPENSE_SPLITTING=true
ENABLE_RECEIPT_OCR=true
ENABLE_INVESTMENTS=true
ENABLE_AI_INSIGHTS=true
ENABLE_BILL_AUTOMATION=true
ENABLE_API=true

# Cache Settings
CACHE_DRIVER=file
CACHE_LIFETIME=300

# Queue Settings (for async jobs)
QUEUE_DRIVER=database

# Logging
LOG_LEVEL=info
LOG_PATH=../logs/budget.log
