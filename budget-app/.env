# Budget Control - Environment Configuration

# Application Settings
APP_NAME="Budget Control"
APP_DEBUG=true
APP_URL=http://localhost:8000
TIMEZONE=Europe/Prague

# Database
DATABASE_PATH=./database/budget.db

# Currency
CURRENCY=CZK

# AI Integration (Optional)
OPENAI_API_KEY=

# CSV Import Settings
CSV_MAX_SIZE=10485760
CSV_UPLOAD_DIR=./uploads/csv

# Email (Optional - for future features)
MAIL_DRIVER=smtp
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=

# Security
SESSION_NAME=BUDGETAPP_SESSION
SESSION_LIFETIME=3600

# Features
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_CSV_IMPORT=true
ENABLE_INVESTMENTS=true
ENABLE_GOALS=true
